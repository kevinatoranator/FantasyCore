<?xml version="1.0" encoding="etf-8" ?>

<!-- Coal -->
<Defs>
	<ThingDef ParentName="RockBase">
    <defName>MineableCoal</defName>
    <label>coal deposit</label>
    <description>Coal is found in this wall.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(114,92,83)</color>
      <colorTwo>(5,5,5)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Coal</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>30</min>
        <max>40</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

