  <!-- Throwing Axe -->
	<ThingDef ParentName="BaseWeaponNeolithic">
    <defName>ThrowingAxe</defName>
    <label>throwing axe</label>
    <description>Axes at a range</description>
    <graphicData>
      <texPath>Weapons/IronThrowingAxe</texPath>
      <graphicClass>Graphic_Single</graphicClass> <!-- shrink size -->
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
     <costList>
      <WoodLog>70</WoodLog> <!-- change costs -->
    </costList>
    <statBases>
      <WorkToMake>100</WorkToMake><!-- edit higher -->
      <Mass>1.5</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
    </statBases>
	<equippedAngleOffset>0</equippedAngleOffset>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
    </weaponTags>
    <verbs> <!-- spin -->
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Thrown_Axe</defaultProjectile><!-- edit to thrown axe-->
        <warmupTime>1.35</warmupTime>
        <range>33</range>
        <soundCast>Interact_BeatFire</soundCast> <!-- impact sound like arrows/bullets -->
		<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!-- Thrown Axe -->
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Thrown_Axe</defName>
    <label>thrown axe</label>
    <graphicData>
      <texPath>Weapons/IronThrowingAxeSmall</texPath> <!-- Create real thrown axe-->
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <stoppingPower>2.5</stoppingPower>
	  <armorPenetrationBase>0.10</armorPenetrationBase>
      <speed>26</speed>
    </projectile>
  </ThingDef>
	
